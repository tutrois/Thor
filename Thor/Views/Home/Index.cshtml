@{
    ViewData["Title"] = "Home Page";
}

@using Thor.Data.Helpers;
@model Thor.ViewModel.HomeViewModel;

<!-- Small boxes (Stat box) -->
<div class="row">
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-teal">
            <div class="inner">
                <h3>@Model.CountTicketsOpen</h3>

                <p>Chamados em Aberto</p>
            </div>
            <div class="icon">
                <i class="ion ion-bag"></i>
            </div>
            <a href="@Url.Action("Index", "Tickets")" class="small-box-footer">Mais Informações <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-warning-final">
            <div class="inner">
                <h3>@Model.CountTicketsInProgess</h3>

                <p>Chamados em Andamento</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            <a href="@Url.Action("Index", "Tickets")" class="small-box-footer">Mais Informações <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-info-final">
            <div class="inner">
                <h3>@Model.CountTicketsCompleted</h3>

                <p>Chamados Concluídos</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a href="@Url.Action("Index", "Tickets")" class="small-box-footer">Mais Informações <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->


    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-danger-final">
            <div class="inner">
                <h3>@Model.CountTicketsCanceled</h3>

                <p>Chamados Cancelados</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            <a href="@Url.Action("Index", "Tickets")" class="small-box-footer">Mais Informações <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
</div>
<!-- /.row -->
<div>
    <div class="card">
        <div class="card-header border-transparent">
            <h3 class="card-title">Últimos Chamados</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table m-0">
                    <thead>
                        <tr style="text-align: center;">
                            <th>Número</th>
                            <th>Título</th>
                            <th>Status</th>
                            <th>Data da Criação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TicketsTable.OrderBy(i => i.CreatedOn).Take(5))
                        {
                            <tr>
                                <td style="text-align: center; width: 20%;">
                                    <a href="pages/examples/invoice.html">@Html.DisplayFor(modelItem => item.Number)</a>
                                </td>
                                <td style="text-align: center; width: 40%;">@Html.DisplayFor(modelItem => item.Title)</td>
                                <td style="text-align: center; width: 20%;"><span class="badge @item.ColorStatus">@Html.DisplayFor(modelItem =>item.Status)</span></td>
                                <td style="text-align: center; width: 20%;">
                                    <div class="sparkbar" data-color="#00a65a" data-height="20">@Html.DisplayFor(modelItem => item.CreatedOn)</div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer clearfix">
            <a href="@Url.Action("Index", "Tickets")" class="btn btn-sm btn-secondary float-right">Visualizar Mais Chamados</a>
        </div>
    </div>
</div>