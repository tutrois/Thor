<!-- /.row -->
<div>
    <div class="card">
        <div class="card-header border-transparent">
            <h3 class="card-title">Últimos Chamados</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table m-0">
                    <thead>
                        <tr>
                            <th>Número</th>
                            <th>Título</th>
                            <th>Status</th>
                            <th>Data da Criação</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><a href="pages/examples/invoice.html">1</a></td>
                            <td>Call of Duty IV não abre</td>
                            <td><span class="badge badge-success">Aberto</span></td>
                            <td>
                                <div class="sparkbar" data-color="#00a65a" data-height="20">05/08/2022 14:00 PM</div>
                            </td>
                        </tr>
                        <tr>
                            <td><a href="pages/examples/invoice.html">2</a></td>
                            <td>Samsung Smart TV Não liga</td>
                            <td><span class="badge badge-warning">Em Andamento</span></td>
                            <td>
                                <div class="sparkbar" data-color="#f39c12" data-height="20">05/08/2022 14:00 PM</div>
                            </td>
                        </tr>
                        <tr>
                            <td><a href="pages/examples/invoice.html">3</a></td>
                            <td>Sem rede</td>
                            <td><span class="badge badge-danger">Cancelado</span></td>
                            <td>
                                <div class="sparkbar" data-color="#f56954" data-height="20">05/08/2022 14:00 PM</div>
                            </td>
                        </tr>
                        <tr>
                            <td><a href="pages/examples/invoice.html">4</a></td>
                            <td>Sem acesso a internet</td>
                            <td><span class="badge badge-info">Finalizado</span></td>
                            <td>
                                <div class="sparkbar" data-color="#00c0ef" data-height="20">05/08/2022 14:00 PM</div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer clearfix">
            <a href="javascript:void(0)" class="btn btn-sm btn-secondary float-right">Visualizar Mais Chamados</a>
        </div>
    </div>
</div>