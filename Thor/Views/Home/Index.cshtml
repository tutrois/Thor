        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-warning-final">
            <div class="inner">
                <h3>***</h3>

                <p>Chamados em Andamento</p>
            </div>
            <div class="icon">
